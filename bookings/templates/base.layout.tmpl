      <script>
        (() => {
          const forms = document.getElementsByClassName('needs-validation')
          Array.prototype.slice.call(forms)
            .forEach(f => f.addEventListener('submit', e => {
                if (!f.checkValidity()) {
                  e.preventDefault()
                  e.stopPropagation()
                }
                f.classList.add('was-validated')
              }, false)
            )
        })()
        const notify = (type, text) => notie.alert({ type, text })
        const alertModal = (title, text, icon, confirmButtonText) => Swal.fire({ 
          title, text, icon, confirmButtonText 
        })
        
        const prompt = () => {
          const toast = ({
            position = 'top-end',
            icon = 'success',
            msg = ""
          }) => {
            const Toast = Swal.mixin({
              toast: true,
              position,
              icon,
              title: msg,
              showConfirmButton: false,
              timer: 3000,
              timerProgressBar: true,
              didOpen: toast => {
                toast.addEventListener('mouseenter', Swal.stopTimer)
                toast.addEventListener('mouseleave', Swal.resumeTimer)
              }
            })
            Toast.fire({ icon, msg })
          }
          const modal = ({ 
            icon = 'success',
            text = '',
            title = '',
            footer = ''
          }) => {
            Swal.fire({ icon, title, text, footer })
          }
          const reservationForm = async ({ html = '', title = '' }) => {
            const { value: formValues } = await Swal.fire({
              title,
              html,
              backdrop: false,
              focusConfirm: false,
              showCancelButton: true,
              willOpen: () => {
                const el = document.querySelector('#reservation-dates-modal')
                const datepicker = new DateRangePicker(el, {
                  format: 'dd/mm/yyyy',
                  showOnFocus: true
                })
              },
              preConfirm: () => [
                document.querySelector('#start').value,
                document.querySelector('#end').value
              ],
              didOpen: () => {
                document.querySelector('#start').removeAttribute('disabled')
                document.querySelector('#end').removeAttribute('disabled')
              }
            })
            if (formValues) {
              Swal.fire(JSON.stringify(formValues))
            }
          }
          return { toast, modal, reservationForm }
        }
      const attention = prompt();
      </script>
